{
  "manifest_version": 3,
  "name": "ClipHoard",
  "description": "Quickly stash and access your most-used data",
  "version": "1.0",
  "action": {
    "default_popup": "./src/popup.html",
    "default_icon": "./public/icons/cliphoard.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "permissions": [
    "storage"
  ]
}